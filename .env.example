# ===========================================
# USStock - Root Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values

# ===========================================
# Database (PostgreSQL)
# ===========================================
# Railway provides DATABASE_URL automatically in production
DATABASE_URL=postgresql://usstock:usstock123@localhost:5434/usstock

# ===========================================
# Redis Cache
# ===========================================
# Railway provides REDIS_URL automatically in production
REDIS_URL=
REDIS_HOST=localhost
REDIS_PORT=6381
REDIS_PASSWORD=

# ===========================================
# Data Provider APIs
# ===========================================
# Polygon.io API (https://polygon.io)
POLYGON_API_KEY=your_polygon_api_key

# Finnhub API (https://finnhub.io)
FINNHUB_API_KEY=your_finnhub_api_key

# ===========================================
# AI/Translation (Optional)
# ===========================================
# Anthropic API for Claude translation
ANTHROPIC_API_KEY=

# ===========================================
# Frontend Configuration
# ===========================================
# API URL for frontend (set in Railway environment for production)
NEXT_PUBLIC_API_URL=http://localhost:3100

# ===========================================
# Vector DB (Optional - for future use)
# ===========================================
PINECONE_API_KEY=
PINECONE_ENVIRONMENT=
PINECONE_INDEX_NAME=usstock-news
